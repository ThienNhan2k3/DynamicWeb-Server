<!DOCTYPE html>
<html lang="en" >
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <title><%= role %> | <%= tab %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />

    <!-- Font awesome -->
    <script src="https://kit.fontawesome.com/5990078b0a.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/So/style.css">
    <link rel="stylesheet" href="/css/So/table.css">
  </head>

  <body>
  <%- include("../partials/header.ejs") %>
  <!-- Navbar content -->
  <%- include("./subPartials/navbar.ejs") %> 
  <!-- Main content -->
  <main class="dynamic-container">
    <!--Ward sorting area  -->
    <% if (role == 'Quận') { %>
    <div class="container-fluid w-30">
      <form action=""  >
        <div class="row align-items-center gx-1">
          <div class="col-2 ">
            <div class="input-group input-group-sm ">
              <span class="input-group-text" id="inputGroup-sizing-sm">Phường xử lý</span>
              <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
            </div>            
          </div>
          <div class="col-2">
            <button type="submit" class="btn btn-primary btn-sm">Lọc</button>
          </div>
        </div>
      </form>
    </div>
    <% } %>
    <!-- Table area -->
    <div class="container-fluid pt-4 pe-4 text-center table-responsive">
        <div class="row justify-content-center">
            <div class="container row bg-secondary text-white ">
                <div class="col text-center">
                    <p class="fs-2 text-center py-2 m-0">Danh sách điểm đặt quảng cáo</p> 
            </div>
            </div>
            <table class="table table-striped">
                <thead>
                
                  <tr>
                    <th scope="col">Địa chỉ</th>
                    <th scope="col">Khu vực</th>
                    <th scope="col">Loại vị trí</th>
                    <th scope="col">Hình thức</th>
                    <th scope="col">Hình ảnh</th>
                    <th scope="col">Tình trạng</th>
                    <th scope="col">Chức năng</th>
                  </tr>
                </thead>
                <tbody>
                  <% adsPlacements.forEach(place => { %>
                    <tr>
                      <td><%= place.address %></td>
                      <td><%= place.Area.ward %> <%= place.Area.district %></td>
                      <td><%= place.LocationType.locationType %></td>
                      <td><%= place.AdsType.type %></td>
                      <td>Link</td>
                      <td><%= place.status %></td>
                      <td>
                          <a href="./ds-qc-1-diem.html"><img src="/images/view.png" alt="" width="35"></a>
                          <a href="" data-bs-toggle="modal" data-bs-target="#locationChange"><img src="/images/edit.png" alt="" width="35"></a>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
        </div>
        <!-- Table pagination -->
        <nav aria-label="Page navigation example">
          <ul class="pagination justify-content-end">
            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
          </ul>
        </nav>
    </div>
  </main> 
  <!-- Footer -->
  <%- include("../partials/footer.ejs") %>
  </body>


  <script
    src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"
  ></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
    integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
    crossorigin="anonymous"
  ></script>
  <script src="/javascript/So/navbar.js"></script>
</html>
