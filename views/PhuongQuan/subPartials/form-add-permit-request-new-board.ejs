    <!-- Permisson report form with full info -->
    <div
      class="modal fade"
      id="permitRequestAndCreateBoardModal"
      aria-hidden="true"
      aria-labelledby="permitRequestAndCreateBoardModal"
      tabindex="-1"
    >
      <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <div class="container d-flex flex-column align-items-center">
              <h1 class="modal-title fs-5">
                Yêu cầu cấp phép quảng cáo
              </h1>
              <p class="modal-title">Bước 1/2</p>
            </div>
            <div class="align-self-start">
              <button
                type="button align-self-start"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
          </div>
          <div class="modal-body">
            <!-- Body 1 -->
            <form action="/<%= accountType %>/home" onsubmit="checkValidFirstForm(event)" id="createBoardForm" method="POST">
              <input type="hidden" name="adsPlacementId" id="adsPlacementIdEdit"/>
              <!-- First row -->
              <div class="row">
                <div class="col">
                  <div class="form-floating">
                    <select class="form-select" id="boardTypeIdEdit" name="boardTypeId" required>
                      <option value="">Vui lòng chọn loại bảng</option>
                      <% boardTypes.forEach(type => { %>
                          <option value="<%= type.id %>"><%= type.type %></option>
                        <% }); %>
                    </select>
                    <label for="boardTypeIdEdit">Loại bảng quảng cáo</label>
                  </div>
                </div>
                <div class="col">
                  <div class="form-floating mb-3">
                    <input
                      type="text"
                      class="form-control"
                      id="boardSizeEdit"
                      name="boardSize"
                      value="1m x 1m"
                      required
                    />
                    <label for="boardSizeEdit">Kích thước</label>
                  </div>
                </div>
                <div class="col">
                  <div class="form-floating mb-3">
                    <input
                      type="text"
                      class="form-control"
                      id="boardQuantityEdit"
                      name="boardQuantity"
                      value="1 trụ/bảng"
                      required
                    />
                    <label for="boardQuantityEdit">Kích thước</label>
                  </div>
                </div>
              </div>
              <div class="row mt-4">
                <div class="col">
                  <div class="form-floating">
                    <textarea
                      class="form-control"
                      placeholder="Vui lòng nhập nội dung quảng cáo"
                      id="contentEdit"
                      name="content"
                      style="height: 100px"
                      required
                    ></textarea>
                    <label for="contentEdit">Nội dung quảng cáo</label>
                  </div>
                  <div class="mb-3">
                    <label for="formFile" class="form-label">Hình ảnh</label>
                    <input class="form-control" type="file" id="formFile" />
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col"></div>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <!-- <button
              class="btn btn-primary"
              data-bs-target="#permissionReport-sub"
              data-bs-toggle="modal"
            >
              Tiếp theo
            </button> -->
            <button
              type="submit"
              class="btn btn-primary"
              form="createBoardForm"
            >
              Tiếp theo
            </button>
          </div>
        </div>
      </div>
    </div>
    <div
      class="modal fade"
      id="permissionReport-sub"
      aria-hidden="true"
      aria-labelledby="permissionReport-sub"
      tabindex="-1"
    >
      <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <div class="container d-flex flex-column align-items-center">
              <h1 class="modal-title fs-5">
                Yêu cầu cấp phép quảng cáo
              </h1>
              <p class="modal-title">Bước 2/2</p>
            </div>
            <div class="align-self-start">
              <button
                type="button align-self-start"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
          </div>
          <div class="modal-body justify-content-center">
            <form action="/<%= accountType %>/home" class="text-center" id="permitRequestWithNewBoardForm" method="POST">
              <input type="hidden" name="boardId" id="boardIdEdit" value="-1"/>
              <input type="hidden" name="companyId" id="companyIdEdit"/>
              <div class="row">
                <div class="col">
                  <div class="form-floating mb-3">
                    <input
                      type="text"
                      class="form-control"
                      id="companyNameEdit"
                      name="companyName"
                      list="datalistOptions"
                      oninput="updateCompanyInfo(event, '#permitRequestWithNewBoardForm')"
                      required
                    />
                    <datalist id="datalistOptions">
                      <% companies.forEach(company => { %>
                        <option value="<%= company.name %>" data-id="<%= company.id %>" data-phone="<%= company.phone %>" data-email="<%= company.email %>" data-address="<%= company.address %>"><%= company.address %></option>
                      <% }); %>
                    </datalist>
                    <label for="companyNameEdit"
                      >Tên công ty đăng ký quảng cáo</label
                    >
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col">
                    <div class="form-floating mb-3">
                      <input
                        type="email"
                        class="form-control"
                        id="emailEdit"
                        name="email"
                        placeholder="name@example.com"
                        required
                      />
                      <label for="emailEdit">Email</label>
                    </div>
                </div>
                <div class="col">
                    <div class="input-group mb-3">
                      <span class="input-group-text" id="basic-addon1">+84</span>
                      <input
                        type="text"
                        class="form-control"
                        placeholder="Số điện thoại"
                        id="phoneEdit"
                        name="phone"
                        required
                      />
                    </div>
                </div>
                </div>
                <div class="row">
                  <div class="col">
                    <div class="form-floating mb-3">
                      <input
                        type="text"
                        class="form-control"
                        placeholder="Địa chỉ"
                        id="addressEdit"
                        name="address"
                        required
                      />
                      <label for="addressEdit">Địa chỉ</label>
                    </div>
                  </div>
                </div>
                <div class="row">
                    <div class="col">
                      <div class="form-floating mb-3">
                        <input
                          type="date"
                          class="form-control"
                          id="startDateEdit"
                          name="startDate"
                          placeholder="Từ"
                          required
                        />
                        <label for="startDateEdit">Ngày bắt đầu hợp đồng</label>
                      </div>
                    </div>
                    <div class="col">
                      <div class="form-floating mb-3">
                        <input
                          type="date"
                          class="form-control"
                          id="endDateEdit"
                          name="endDate"
                          placeholder="Đến"
                          required
                        />
                        <label for="endDateEdit">Ngày kết thúc hợp đồng</label>
                      </div>
                    </div>
                  </div>
              <button type="button" onclick="submit2Forms('/<%= accountType %>/home')" class="btn btn-success container-fluid">
                Gửi yêu cầu
              </button>
            </form>
          </div>
          <div class="modal-footer justify-content-start">
            <button
              class="btn btn-primary"
              data-bs-target="#permitRequestAndCreateBoardModal"
              data-bs-toggle="modal"
            >
              Về trước
            </button>
          </div>
        </div>
      </div>
    </div>